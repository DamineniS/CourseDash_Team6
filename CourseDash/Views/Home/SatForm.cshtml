@{
    ViewData["Title"] = "SAT Admission Form";
}

<main class="about-section">
    <div class="about-content">
        <h2 style="color: white;">Submit Your SAT Score and Major Interest</h2>

        <!-- SAT Admission Form -->
        <form id="satForm">
            <div style="margin-bottom: 10px;">
                <label for="satScore" style="color: white;"><strong>SAT Score:</strong></label>
                <input type="number" id="satScore" required />
            </div>

            <div style="margin-bottom: 10px;">
                <label for="major" style="color: white;"><strong>Major:</strong></label>
                <select id="major" required>
                    <option value="">Loading majors...</option>
                </select>
            </div>

            <div style="margin-bottom: 10px;">
                <label for="message" style="color: white;"><strong>Message to Advisor:</strong></label><br />
                <textarea id="message" rows="4" cols="50" required></textarea>
            </div>

            <button type="submit">Submit</button>
        </form>

        <hr style="margin: 30px 0; border-color: white;" />

        <h3 style="color: white;">Submitted Entries</h3>
        <table style="width: 100%; border-collapse: collapse;">
            <thead>
                <tr style="color: white; border-bottom: 1px solid white;">
                    <th style="padding: 8px;color: white; text-align: center;">SAT Score</th>
                    <th style="padding: 8px;color: white;text-align: center;">Major</th>
                    <th style="padding: 8px;color: white;text-align: center;">Message</th>
                    <th style="padding: 8px;color: white;text-align: center;">Actions</th>
                </tr>
            </thead>
            <tbody id="satTableBody" style="color: white;">
                <!-- Entries will be populated here -->
            </tbody>
        </table>
    </div>
</main>

<!-- Include the script -->
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="~/js/satCrud.js"></script>
<script src="/js/formMajors.js"></script>
